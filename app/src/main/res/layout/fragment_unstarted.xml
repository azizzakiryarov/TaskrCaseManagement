<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/progressBar_UNSTARTED"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/white">

        <ProgressBar
            android:id="@+id/UNSTARTED"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable_gray"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/textUNSTARTED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/UNSTARTED"
            android:layout_below="@+id/UNSTARTED"
            android:layout_marginRight="10dp"
            android:text="UNSTARTED"
            android:textColor="@android:color/holo_orange_dark" />


        <TextView
            android:id="@+id/nUnstarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/UNSTARTED"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="44dp"
            android:text="number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <ProgressBar
            android:id="@+id/STARTED"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="08dp"
            android:layout_toStartOf="@+id/DONE"
            android:clickable="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable_orange"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/textSTARTED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/STARTED"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@+id/textDONE"
            android:text="STARTED"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/nStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/STARTED"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="44dp"
            android:text="number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <ProgressBar
            android:id="@+id/DONE"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/MyTask"
            android:clickable="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable_green"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/textDONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DONE"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/STARTED"
            android:text="DONE"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/nDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/DONE"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="44dp"
            android:text="number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <ProgressBar
            android:id="@+id/MyTask"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/STARTED"
            android:clickable="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable_purple"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/textMYTASK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MyTask"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/DONE"
            android:text="MY TASK"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/nMyTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/MyTask"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="44dp"
            android:text="number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragmentUnstarted"
        android:layout_width="382dp"
        android:layout_height="370dp"
        android:layout_marginTop="142dp"
        android:background="@android:color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view_UNSTARTED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="23dp"
            android:layout_marginEnd="29dp"
            android:backgroundTint="#FFA500"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_input_add" />

    </RelativeLayout>

</RelativeLayout>