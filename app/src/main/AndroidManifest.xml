<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.groupfish.azizzakiryarov.taskrcasemanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".TaskDetailsActivity" />
        <activity android:name=".TeamDetailsActivity" />

        <provider
            android:name=".WorkItemsProvider"
            android:authorities="se.groupfish.azizzakiryarov.taskrcasemanagement.workitemsuggesion"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".AddWorkItemsActivity" />
        <activity android:name=".EditAssigneeWorkItemsActivity"></activity>
    </application>

</manifest>